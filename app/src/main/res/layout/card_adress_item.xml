<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:foreground="?selectableItemBackground"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_12sdp"
            android:layout_gravity="center"
            android:id="@+id/card_adress_item_card_background_ly"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_adress_item_title_tv"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableStart="@drawable/maps3"
                    android:fontFamily="@font/almarai_bold"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"  />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    >
                    <ProgressBar
                        android:id="@+id/card_adress_item_details_progress_loading"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_18sdp" />
                <TextView
                    android:id="@+id/card_adress_item_details_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:fontFamily="@font/almarai_bold"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lineSpacingExtra="@dimen/_2sdp"
                    android:text="@string/enable_device_location"
                    android:textColor="@color/gray_707070"
                    android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/card_adress_item_edit_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="end"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/card_adress_item_edit_btn"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"

                        android:layout_marginEnd="@dimen/_16sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/almarai_bold"
                        android:gravity="start"
                        android:maxWidth="@dimen/_50sdp"
                        android:maxLines="1"
                        android:text="@string/edit"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/_11ssp" />
                    <TextView
                        android:id="@+id/card_adress_item_delete_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/almarai_bold"
                        android:gravity="start"
                        android:maxWidth="@dimen/_50sdp"
                        android:maxLines="1"
                        android:text="@string/delete"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/_11ssp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>