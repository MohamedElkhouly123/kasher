<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginBottom="@dimen/_3sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/_5sdp">
    <ImageView
        style="@style/view_style5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="bottom"
        android:id="@+id/top_image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:weightSum="4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="end"
            >
            <TextView
                android:id="@+id/card_search_product_name_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_1sdp"
                android:fontFamily="@font/almarai_regular"
                android:maxLines="1"
                android:minLines="1"
                android:layout_marginStart="@dimen/_4sdp"
                android:gravity="start|center_vertical"
                android:textAlignment="viewStart"
                android:drawableStart="@drawable/ic_search_icon_gray"
                android:text="منظم متعدد الأستخدام"
                android:drawablePadding="@dimen/_8sdp"
                android:textColor="@color/gray_text_color"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            >
            <LinearLayout
                android:id="@+id/card_search_delete_icon_image_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_9sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_11sdp"
                android:paddingEnd="@dimen/_8sdp"
                android:layout_gravity="end|center_vertical"
                >

                <ImageView
                    android:id="@+id/card_search_delete_icon_image"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_delete_icon"
                    android:fontFamily="@font/almarai_bold"
                    android:textColor="@color/gray_text_color" />
                <ImageView
                    android:id="@+id/card_search_arrow_icon_image"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:src="@drawable/ic_arrow_right_more_icone"
                    android:fontFamily="@font/almarai_bold"
                    android:textColor="@color/gray_text_color" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>