<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_8sdp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_4sdp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/notification_card_imge"
                android:src="@drawable/imge"
                android:scaleType="centerCrop"
                />

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_4sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hyundai 2020"
                android:textSize="@dimen/_13sdp"
                android:textColor="#808080"
                android:id="@+id/notification_card_name_item"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lorem ipsum dolor sit amet,conseture sadipscing elitr sedlorem ipsum dolor sit amet conseture  "
                android:textColor="#B2B2B2"
                android:textSize="@dimen/_9ssp"
                android:layout_marginTop="@dimen/_4sdp"
                android:id="@+id/notification_card_details"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_gravity="end"
                android:text="10:30"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_10ssp"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:layout_marginTop="@dimen/_8sdp"
                android:drawableTint="@color/app_color"
                android:drawablePadding="@dimen/_3sdp"
                android:id="@+id/notification_card_time"
                />
        </LinearLayout>


    </LinearLayout>
    </FrameLayout>

</androidx.appcompat.widget.LinearLayoutCompat>