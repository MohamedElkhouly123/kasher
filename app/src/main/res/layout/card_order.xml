<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:layout_margin="@dimen/_6sdp"
        app:cardCornerRadius="@dimen/_8sdp"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_8sdp"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_1sdp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/order_card_order_state_tv"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/almarai_regular"
                        android:gravity="center_vertical|center"
                        android:maxLines="1"
                        android:text="قيد الشحن"
                        android:background="#1FB55F26"
                         android:textColor="#824014"
                        android:textSize="@dimen/_9ssp" />
                    <TextView
                        android:id="@+id/order_card_number_order_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/almarai_bold"
                        android:gravity="center_vertical|center"
                        android:maxLines="1"
                        android:text="#7705"
                        android:textColor="@color/app_color"
                        android:textSize="@dimen/_12ssp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:fontFamily="@font/almarai_regular"
                        android:gravity="center_vertical|center"
                        android:maxLines="1"
                        android:text="@string/order_number"
                        android:textColor="@color/gray_707070"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/order_card_name_product_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1"
                    android:lineSpacingExtra="@dimen/_7sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد ...تم توليد هذا النص من مولد الن"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginBottom="@dimen/_16sdp"
                    android:gravity="end"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:ellipsize="end"
                        android:fontFamily="@font/almarai_regular"
                        android:gravity="end"
                        android:maxWidth="@dimen/_50sdp"
                        android:maxLines="1"
                        android:text="02/17/2022"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textColor="@color/gray_707070"
                        android:textSize="@dimen/_9ssp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>