<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp">
        <!--        android:layout_marginStart="@dimen/_30sdp"-->
        <!--        android:layout_marginEnd="@dimen/_30sdp"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:visibility="gone"
                android:elevation="3dp"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                />

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:padding="@dimen/_20sdp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:elevation="3dp"
                android:fontFamily="@font/almarai_regular"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/Areyousuretoquite"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/dialog_log_out_close_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:background="@drawable/no_background_buttom"
                    android:text="@string/cancel"
                    app:backgroundTint="@null"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    />
                <Button
                    android:id="@+id/dialog_log_out_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_blue_complete_shape_red"
                    android:text="@string/log_out"
                    android:layout_weight="1"
                    android:fontFamily="@font/almarai_regular"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>