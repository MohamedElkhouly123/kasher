<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical"
            android:focusable="true"
            android:background="@color/white"
            android:id="@+id/advertisement_item_card"
           >



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:foreground="?selectableItemBackground">
                        <ImageView
                            android:id="@+id/sub_category_image"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_90sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/devise" />
                    <FrameLayout
                        android:id="@+id/card_item_like"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="end|bottom"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="@drawable/circle_shap_love"
                        android:elevation="@dimen/_16sdp">

                        <ImageView
                            android:id="@+id/card_sub_category_out_line_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_love_outline" />

                        <ImageView
                            android:id="@+id/card_more_seller_fill_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_love_fill"
                            android:visibility="gone"
                            app:tint="@color/white" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:ellipsize="end"
                android:fontFamily="@font/almarai_bold"
                android:gravity="start"
                android:maxLines="1"
                android:text="قدر ضغط كهربائي"
                android:textColor="@color/black_292929"
                android:textSize="@dimen/_12ssp" />
            <TextView
                android:id="@+id/fragment_advertisement_detailse_details_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginTop="@dimen/_2sdp"

                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:fontFamily="@font/almarai_regular"
                android:gravity="center_vertical"
                android:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا النص من مولد النص العربى، حيث يمكنك أن تولد مثل هذا النص أو العديد من ...النصوص الأخرى إضافة إلى زيادة عدد الحروف التى"
                android:textColor="@color/black_292929"
                android:textSize="@dimen/_10sdp"
                />
            <LinearLayout
                android:id="@+id/card_advertisement_price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:ellipsize="end"
                    android:fontFamily="@font/almarai_bold"
                    android:gravity="start"
                    android:maxWidth="@dimen/_50sdp"
                    android:maxLines="1"
                    android:text="470"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_13ssp" />

                <TextView
                    android:id="@+id/card_more_seller_price_money_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:fontFamily="@font/almarai_bold"
                    android:gravity="center_vertical"
                    android:text="@string/Reial"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/card_advertisement_no_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="@dimen/_8sdp"

                    android:ellipsize="end"
                    android:fontFamily="@font/almarai_bold"
                    android:maxWidth="@dimen/_168sdp"
                    android:maxLines="1"
                    android:text="@string/no_price"
                    android:textAlignment="viewStart"
                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_13ssp"
                    android:visibility="gone" />


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            >
            <LinearLayout
                android:id="@+id/card_all_sub_category_item_add_to_bin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"


                 >
                <FrameLayout
                    android:id="@+id/card_all_more_seller_item_decrease_number_product"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"

                    android:background="@drawable/circle_shap_remove"
                    android:elevation="@dimen/_50sdp"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_minus_icon" />

                </FrameLayout>


                <TextView
                    android:id="@+id/card_all_more_seller_item_number_of_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/almarai_bold"
                    android:gravity="start"
                    android:maxWidth="@dimen/_50sdp"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <FrameLayout
                    android:id="@+id/card_all_more_seller_item_increase_number_product"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/circle_shap_add"
                    android:elevation="@dimen/_50sdp"


                    android:padding="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center"

                        android:src="@drawable/ic_plus_icon_add"
                        app:tint="@color/white" />

                </FrameLayout>



            </LinearLayout>
            <TextView
                android:id="@+id/card_all_sub_category_item_add_to_bin_btu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="@font/almarai_regular"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/btn_blue_complete_shape"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:paddingTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_6sdp"
                android:text="@string/add_to_bin"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                  />
        </LinearLayout>
            </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!--        </androidx.cardview.widget.CardView>-->


</FrameLayout>