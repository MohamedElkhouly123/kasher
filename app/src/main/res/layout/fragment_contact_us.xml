<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    android:id="@+id/parent_ly"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/almarai_bold"
            android:text="@string/contact_us"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_1sdp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            android:src="@drawable/ic_back_icon"
            android:elevation="@dimen/_5sdp"
            />
<!--        <ImageView-->
<!--            android:id="@+id/back_btn"-->
<!--            android:layout_width="@dimen/_25sdp"-->
<!--            android:layout_height="@dimen/_25sdp"-->
<!--            android:layout_gravity="start|center_vertical"-->
<!--            android:layout_marginStart="@dimen/_15sdp"-->


<!--            android:layout_marginEnd="@dimen/_10sdp"-->
<!--            android:background="@drawable/ic_back_icon"-->
<!--            android:elevation="@dimen/_5sdp"-->
<!--            android:scaleType="centerCrop" />-->


    </FrameLayout>

    <ImageView
        style="@style/view_style2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:padding="1dp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        app:cardCornerRadius="@dimen/_10sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_16sdp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:elevation="@dimen/_3sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_callcenter_icon" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="@font/almarai_bold"
                                android:gravity="center|center_vertical"
                                android:text="@string/customers_service"
                                android:textColor="@color/black"

                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fragment_contact_us_customers_service_num_tv"

                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/almarai_bold"
                                android:gravity="center|center_vertical"
                                android:maxLines="1"
                                android:minLines="1"
                                android:text="000200000"

                                android:textColor="@color/black"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"
                        app:cardCornerRadius="@dimen/_10sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_16sdp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:elevation="@dimen/_3sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_calendar_icon" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="@font/almarai_bold"
                                android:gravity="center|center_vertical"

                                android:text="@string/workdays"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fragment_contact_us_works_days_tv"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/almarai_bold"
                                android:gravity="center|center_vertical"
                                android:maxLines="1"
                                android:minLines="1"
                                android:text="الاحد_الخميس"

                                android:textColor="@color/black"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_6sdp"
                        android:layout_weight="1"
                        android:foreground="?selectableItemBackground"
                        android:gravity="center"

                        app:cardCornerRadius="@dimen/_10sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="@dimen/_70sdp"
                                android:layout_marginStart="@dimen/_16sdp"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:layout_marginEnd="@dimen/_16sdp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:elevation="@dimen/_3sdp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_time_icon" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:ellipsize="end"
                                android:fontFamily="@font/almarai_bold"
                                android:gravity="center|center_vertical"
                                android:text="@string/times_of_work"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fragment_contact_us_times_of_work_tv"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:ellipsize="end"
                                android:fontFamily="@font/almarai_bold"
                                android:gravity="center|center_vertical"
                                android:maxLines="1"
                                android:minLines="1"
                                android:text="9ص_5م"

                                android:textColor="@color/black"
                                android:textSize="@dimen/_9ssp" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:fontFamily="@font/almarai_bold"
                android:text="@string/send_message"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_contact_us_last_name_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_contact_us_last_name_edit"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_39sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:gravity="center|start"
                    android:hint="@string/name"
                    android:inputType="text"
                    android:padding="@dimen/_3ssp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="#8E8E93"
                    android:textSize="@dimen/_11ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
<!--            <com.google.android.material.textfield.TextInputLayout-->
<!--                android:id="@+id/fragment_login_til_email"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->

<!--                >-->


<!--                <com.google.android.material.textfield.TextInputEditText-->
<!--                    android:id="@+id/fragment_login_email_etd"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/_50sdp"-->
<!--                    android:hint="@string/email"-->
<!--                    android:drawableStart="@drawable/ic_baseline_email_24"-->
<!--                    android:drawablePadding="@dimen/_8sdp"-->
<!--                    style="@style/EditTextLogin"-->
<!--                    android:ems="10"-->
<!--                    android:inputType="textEmailAddress" />-->
<!--            </com.google.android.material.textfield.TextInputLayout>-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_contact_us_phone_number_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_contact_us_phone_number_edit"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_39sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:gravity="center|start"
                    android:hint="@string/phone"
                    android:inputType="phone"
                    android:padding="@dimen/_3ssp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="#8E8E93"
                    android:textSize="@dimen/_12ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_contact_us_email_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_contact_us_email_edit"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_39sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:gravity="center|start"
                    android:hint="@string/email"
                    android:inputType="text"
                    android:padding="@dimen/_3ssp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="#8E8E93"
                    android:textSize="@dimen/_12ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fragment_contact_us_subject_til"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_contact_us_subject_edit"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_39sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:gravity="center|start"
                    android:hint="@string/subject"
                    android:inputType="text"
                    android:padding="@dimen/_3ssp"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="#8E8E93"
                    android:textSize="@dimen/_12ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_contact_us_message_details_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:paddingStart="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                app:boxCornerRadiusTopStart="@dimen/_8sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fragment_contact_us_message_details_edit"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:gravity="top|start"
                    android:ems="10"
                    android:scrollbars="vertical"
                    android:inputType="textMultiLine"
                    android:hint="@string/write_your_messsage_here"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textColorHint="#8E8E93"
                    android:textSize="@dimen/_12ssp">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/fragment_contact_us_make_acount_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:background="@drawable/gradient_btn_blue_shap"
                android:fontFamily="@font/almarai_bold"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@string/send_message2"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                app:backgroundTint="@null" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>


