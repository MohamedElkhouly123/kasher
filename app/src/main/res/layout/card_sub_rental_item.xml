<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/card_product_details_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:gravity="start"
            android:text="الوكيل  :"
            android:textAlignment="viewStart"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textColor="@color/black_202020"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/card_product_details_details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_5sdp"
            android:fontFamily="@font/almarai_light"
            android:text="شركه العبسائي للاجهزة"
            android:textAlignment="viewStart"
            android:textColor="@color/black_292929"
            android:textSize="@dimen/_9ssp" />
    </LinearLayout>
</LinearLayout>