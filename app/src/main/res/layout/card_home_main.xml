    <LinearLayout
        android:id="@+id/card_home_main_show_type_name_parent_ly"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:id="@+id/card_home_main_show_type_name_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:visibility="gone"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp">

        <TextView
            android:id="@+id/card_home_main_type_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:fontFamily="@font/almarai_bold"
            android:gravity="center_vertical"
            android:text="@string/today_offer"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />



            <TextView
                android:id="@+id/fragment_home_show_all_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"
                android:fontFamily="@font/almarai_bold"
                android:text="@string/show_all"
                android:textColor="@color/app_color"
                android:textSize="@dimen/_12ssp" />

    </LinearLayout>
    <TextView
        android:id="@+id/fragment_home_addition_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:visibility="gone"
        android:ellipsize="end"
        android:drawablePadding="@dimen/_6sdp"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:fontFamily="@font/almarai_regular"
        android:minLines="1"
        android:text="تنتهى بعد 18 يوم"
        android:textColor="@color/black_292929"
        android:textSize="@dimen/_9ssp" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_home_main_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:nestedScrollingEnabled="false"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp" />
    </LinearLayout>

