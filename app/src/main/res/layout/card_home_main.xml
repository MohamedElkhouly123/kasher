    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_home_main_image_slider_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        >
        <com.smarteist.autoimageslider.SliderView
            android:id="@+id/card_home_main_image_slider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            app:sliderAnimationDuration="600"
            app:sliderIndicatorAnimationDuration="600"
            app:sliderIndicatorGravity="center_horizontal|bottom"
            app:sliderIndicatorMarginBottom="@dimen/_5sdp"
            app:sliderIndicatorOrientation="horizontal"
            app:sliderIndicatorPadding="@dimen/_3sdp"
            app:sliderIndicatorSelectedColor="@color/app_color"
            app:sliderIndicatorUnselectedColor="#99FFFFFF"
            app:sliderStartAutoCycle="true" />
        <!--                app:sliderScrollTimeInSec="1"
                            app:sliderAutoCycleEnabled="true"
                            app:sliderAutoCycleDirection="back_and_forth"
                            app:sliderIndicatorRtlMode="off"

        -->
