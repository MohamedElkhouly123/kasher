<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bottom_dialog_color"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/white_radius_shape"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/credit_card_buttom_sheet_nested_scroll"

            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/credit_card_buttom_sheet_cancel_image"
                    style="@style/view_style4"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="3dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="@dimen/_8sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:fontFamily="@font/almarai_bold"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:text="@string/insert_credit_card_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/credit_card_buttom_sheet_number_credit_til"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/_8sdp"
                    app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                    app:boxCornerRadiusTopStart="@dimen/_8sdp">
                <EditText
                    android:id="@+id/credit_card_buttom_sheet_number_credit_edit"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:fontFamily="@font/almarai_regular"
                    android:hint="@string/credit_card_number"
                    android:inputType="number"
                    android:maxLength="14"
                    android:textAlignment="viewStart"
                    android:textColor="@color/gray_text_color"
                    android:textColorHint="@color/hint_999999"
                    android:textSize="@dimen/_11ssp"
                   />
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/credit_card_buttom_sheet_date_expire_credit_til"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp">
                    <EditText
                        android:id="@+id/credit_card_buttom_sheet_date_expire_credit_edit"
                        style="@style/EditTextLogin"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_width="match_parent"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/almarai_regular"
                        android:hint="@string/Expiry_date"
                        android:drawableEnd="@drawable/ic_date_icon_credit_details"
                        android:maxLength="16"
                        android:editable="false"
                        android:inputType="none"
                        android:focusable="false"
                        android:textAlignment="viewStart"
                        android:textColor="@color/gray_text_color"
                        android:textColorHint="@color/hint_999999"
                        android:textSize="@dimen/_11ssp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/credit_card_buttom_sheet_number_cvv_credit_til"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_8sdp"
                        app:boxCornerRadiusBottomEnd="@dimen/_8sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_8sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_8sdp"
                        app:boxCornerRadiusTopStart="@dimen/_8sdp">
                    <EditText
                        android:id="@+id/credit_card_buttom_sheet_number_cvv_credit_edit"
                        style="@style/EditTextLogin"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_42sdp"
                        android:drawablePadding="@dimen/_8sdp"
                        android:fontFamily="@font/almarai_regular"
                        android:gravity="center"
                        android:hint="@string/cvvv_number"
                        android:inputType="phone"
                        android:maxLength="16"

                        android:textColor="@color/gray_text_color"
                        android:textColorHint="@color/hint_999999"
                        android:textSize="@dimen/_11ssp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:fontFamily="@font/almarai_bold"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:text="@string/Payment_Summary"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/almarai_regular"
                        android:gravity="start|center_vertical"
                        android:text="المجموع"
                        android:textColor="@color/gray_707070"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:id="@+id/credit_card_buttom_sheet_total_cost_tv"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:fontFamily="@font/almarai_regular"
                            android:gravity="end|center_vertical"
                            android:maxLines="1"
                            android:text="100000"
                            android:textColor="@color/gray_707070"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:fontFamily="@font/almarai_regular"
                            android:text="@string/Reial"
                            android:textColor="@color/gray_707070"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/almarai_regular"
                        android:gravity="start|center_vertical"
                        android:text="الشحن"
                        android:textColor="@color/gray_707070"
                        android:textSize="@dimen/_12ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_50sdp"
                            android:id="@+id/credit_card_buttom_sheet_delivery_cost_tv"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:fontFamily="@font/almarai_regular"
                            android:gravity="end|center_vertical"
                            android:maxLines="1"
                            android:text="100000"
                            android:textColor="@color/gray_707070"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:fontFamily="@font/almarai_regular"
                            android:text="@string/Reial"
                            android:textColor="@color/gray_707070"
                            android:textSize="@dimen/_12ssp" />

                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    style="@style/view_style2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_4sdp"

                    android:padding="1dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/almarai_bold"
                        android:gravity="start|center_vertical"
                        android:text="الإجمالي"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="end|center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/credit_card_buttom_sheet_total_price_tv"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:fontFamily="@font/almarai_bold"
                            android:gravity="end|center_vertical"
                            android:maxLines="1"
                            android:text="100000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:fontFamily="@font/almarai_bold"
                            android:text="@string/Reial"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_40sdp"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/credit_card_buttom_sheet_cancel_paid_btu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:textColor="@color/app_color"
                        android:background="@drawable/no_background_buttom"
                        android:gravity="center"
                        android:fontFamily="@font/almarai_bold"
                        android:text="@string/cancel"
                        android:textSize="@dimen/_11ssp"
                        app:backgroundTint="@null" />

                    <TextView
                        android:id="@+id/credit_card_buttom_sheet_complete_paid_btu"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/almarai_bold"
                        android:background="@drawable/shap_buttom_blue"
                        android:gravity="center"
                        android:text="@string/Checkout"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12ssp"
                        app:backgroundTint="@null" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>






</LinearLayout>